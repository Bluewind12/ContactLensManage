<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
>
    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="match_parent">
        <TextView
                android:text="@string/set_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/setTimeText"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp" android:textSize="20sp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/limitDay"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/setTimeText"
                app:cardUseCompatPadding="true">

            <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                         android:layout_height="wrap_content">
                <TextView
                        android:text="@string/limit_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/minuteTimeText"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="24dp" android:textSize="24sp" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                        android:text="@string/limit_days"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/manyText"
                        app:layout_constraintStart_toStartOf="@+id/minuteTimeText"
                        android:textSize="36sp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/minuteTimeText" android:layout_marginStart="24dp"
                        android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintVertical_bias="0.278"/>
                <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp" app:srcCompat="@drawable/gear_color"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/imageView"
                        app:layout_constraintStart_toEndOf="@+id/manyText" app:layout_constraintVertical_bias="1.0"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
                        android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"/>
            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/limitDay1"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/limitDay"
                app:cardUseCompatPadding="true" android:layout_marginTop="16dp">

            <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                         android:layout_height="wrap_content">
                <TextView
                        android:text="@string/limit_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/minuteTimeTextL"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="24dp" android:textSize="24sp" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                        android:text="@string/limit_days"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/manyTextL"
                        app:layout_constraintStart_toStartOf="@+id/minuteTimeTextL"
                        android:textSize="36sp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/minuteTimeTextL" android:layout_marginStart="24dp"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>
                <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp" app:srcCompat="@drawable/gear_color"
                        android:id="@+id/imageView2"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/manyTextL"
                        android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp"/>
            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/stockCard"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/limitDay1"
                app:cardUseCompatPadding="true" android:layout_marginTop="16dp">

            <android.support.constraint.ConstraintLayout android:layout_width="wrap_content"
                                                         android:layout_height="wrap_content">
                <TextView
                        android:text="@string/box_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
                        android:id="@+id/textView"
                        android:layout_marginTop="8dp"
                        android:textSize="24sp" app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                        android:text="@string/box_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="@+id/textView"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:id="@+id/stockText" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView" android:textSize="36dp"
                        android:layout_marginStart="24dp" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"/>

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>
        <Button
                android:text="@string/contact_LR_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/timeSetButton"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/stockCard"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</ScrollView>


